<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/padding_medium_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivWishlistItemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="@dimen/padding_medium_10dp">

            <TextView
                android:id="@+id/tvWishlistItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_5dp"
                android:text="Product Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tvLabelPhp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_5dp"
                android:text="PHP "
                android:textColor="@color/black"
                android:layout_below="@id/tvWishlistItemName"/>

            <TextView
                android:id="@+id/tvWishlistItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_5dp"
                android:text="999"
                android:textColor="@color/black"
                android:layout_below="@id/tvWishlistItemName"
                android:layout_toRightOf="@id/tvLabelPhp"/>

            <ImageView
                android:id="@+id/ivWishlistRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_highlight_off_black_24dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/rbWishlistRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:padding="5dp"
                android:rating="5"
                android:stepSize="0.5"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tvWishlistRatingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_5dp"
                android:text="1234"
                android:layout_toRightOf="@id/rbWishlistRating"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivWishlistAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:background="@color/black"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitCenter"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>