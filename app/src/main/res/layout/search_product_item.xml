<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvSearchProduct"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="@dimen/padding_small_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSearchProductImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvSearchProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/padding_medium_10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvSearchProductPricePhp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHP"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/padding_medium_10dp"
                />

            <TextView
                android:id="@+id/tvSearchProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_marginTop="@dimen/padding_medium_10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>



        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/rbSearchProductRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:padding="5dp"
            android:rating="5"
            android:stepSize="0.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tvSearchProductProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Province"
            android:layout_marginTop="@dimen/padding_medium_10dp"
            android:layout_marginBottom="@dimen/padding_medium_10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>